{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "esModuleInterop": true,
    "target": "es2017",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitUseStrict": true,
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
  },
  "include": ["src/**/*"]
}
